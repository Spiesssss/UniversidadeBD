<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <EditText
        android:id="@+id/et_pegaNome"
        android:hint="Insira nome do aluno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/et_pegaCPF"
        android:hint="Insira cpf do aluno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/et_pegaCurso"
        android:hint="Insira o curso do aluno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:text="Matricular"
        android:onClick="realizarMatricula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:onClick="mostrarCursos"
        android:text="mostra Cursos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_mostraCursos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>